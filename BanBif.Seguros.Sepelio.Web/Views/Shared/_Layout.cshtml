        <div class="top-content">
            <div class="container">
                <div class="row">

                    <div style="margin-top: 5%;" class="col-sm-1 col-md-5 col-lg-7 pull-left text-left">

                        <div class="titulo-principal">
                            <img class="ico_prestamo mobile-none" src="~/assets/img/iconos/ico-prestamo.png">
                            <h2>
                                Microseguro de Sepelio
                            </h2>
                        </div>
                        <img src="~/assets/img/iconos/puntos.png" style="height: 12px; width: auto;" class="mobile-none">
