<body style="zoom:90%;">
    <div id="ModalLoading" style="display: none;">
        <span>
            <img src="~/assets/img/loading2.gif" width="25" height="25" /> Cargando ....
        </span>
    </div>

    <section class="principal">

        <!-- Top menu -->
        <nav class="navbar navbar-inverse navbar-no-bg" role="navigation">
            <div class="container">
