    <script>
        function RegistrarLog(request) {
            request.CodigoUnico = sessionStorage.UID;
            request.IpCliente = sessionStorage.IP_CLIENTE;
            sessionStorage.setItem("URL", "@ViewBag.URL");
            $.ajax({
                url: sessionStorage.URL + '/Home/RegistrarLog',
                type: "POST",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                processData: true,
                data: JSON.stringify(request),
                success: function (response) {
                    console.log(response);
                }
            });
        }

        $(document).ready(function () {
            sessionStorage.setItem("URL", "@ViewBag.URL");
            console.log(sessionStorage.CodCliente);
            if (sessionStorage.CodCliente == undefined) {
                window.location.href = sessionStorage.URL;
            }
            else {
                var Cliente = {};
                Cliente.CodigoCliente = sessionStorage.CodCliente;
                $.ajax({
                    url: sessionStorage.URL + '/DesafiliacionGracias/GuardarDesafiliacion',
                    type: "POST",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    processData: true,
                    data: JSON.stringify(Cliente),
                    success: function (response) {
                        console.log(response);
                        if (response.Result) {
                            var LogRequest = {};
                            LogRequest.CodigoCliente = sessionStorage.CodCliente;
                            LogRequest.CodigoPaso = 11;
                            LogRequest.DetalleLog = "PROCESO: DESAFILIACION | METODO: REGISTRAR DESAFILIACIÓN | STATUS: TRUE | JSON: " + JSON.stringify(Cliente);
                            RegistrarLog(LogRequest);

                            LogRequest = {};
                            LogRequest.CodigoCliente = sessionStorage.CodCliente;
                            LogRequest.CodigoPaso = 12;
                            LogRequest.DetalleLog = "PROCESO: DESAFILIACION | METODO: FIN DE FLUJO | STATUS: TRUE | JSON: FIN DEL FLUJO";
                            RegistrarLog(LogRequest);
                        } else {
                            //  alertify.error(re}sponse.Mensaje);
                        }

                    },
                    failure: function (msg) {
                        console.log(msg);

                    },
                    error: function (xhr, status, error) {
                        console.log(error);

                    },
                    complete: function () {
                        //$.unblockUI();
                        //$("#prueba").dialog("close")
                    }
                });

            }
